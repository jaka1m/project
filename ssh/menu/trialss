        "handshake": 4,
        "uplinkOnly": 1
      }
    },
    "system": {
      "statsOutboundUplink": true,
      "statsOutboundDownlink": true
    }
  },
  "routing": {
    "domainStrategy": "Asls",
"rules": []
  },
  "stats": {}
}
END
systemctl reload xray >/dev/null 2>&1
service cron restart >/dev/null 2>&1
if [ ! -e /etc/shadowsocks ]; then
  mkdir -p /etc/shadowsocks
fi

if [ -z ${Quota} ]; then
  Quota="0"
fi
if [ -z ${iplim} ]; then
  iplim="0"
fi
c=$(echo "${Quota}" | sed 's/[^0-9]*//g')
d=$((${c} * 1024 * 1024 * 1024))

if [[ ${c} != "0" ]]; then
  echo "${d}" >/etc/shadowsocks/${user}
  echo "${iplim}" >/etc/shadowsocks/${user}IP
fi
DATADB=$(cat /etc/shadowsocks/.shadowsocks.db | grep "^###" | grep -w "${user}" | awk '{print $2}')
if [[ "${DATADB}" != '' ]]; then
  sed -i "/\b${user}\b/d" /etc/shadowsocks/.shadowsocks.db
fi

echo "### ${user} ${exp} ${uuid}" >>/etc/shadowsocks/.shadowsocks.db
clear
systemctl restart xray
tmux new-session -d -s $user "trial trialss $user $timer"
echo -e "
\033[0;34m====================\033[0m
\e[92;1m Shadowsocks Account   \E[0m
\033[0;34m====================\033[0m
Remarks     : ${user}
Host Server : ${domain}
User Quota  : ${Quota} GB
Port TLS    : 443
Port GRPC   : 443
Password    : ${uuid}
Cipers      : aes-128-gcm
Network     : ws or grpc
Path        : /ss-ws
ServiceName : ss-grpc
\033[0;34m====================\033[0m
Link WS TLS : ${sslinkws}
\033[0;34m====================\033[0m
Link WS None TLS : ${nonsslinkws}
\033[0;34m====================\033[0m
Link GRPC : ${sslinkgrpc}
\033[0;34m====================\033[0m
Expired    : $timer Minutes
\033[0;34m====================\033[0m
 " | tee -a /etc/xray/log-create-${user}.log
echo ""
read -n 1 -s -r -p "Press any key to back on menu"
m-ssws