    status_10="ğŸŸ¢ ON"
else
    status_10="ğŸ”´ OFF"
fi

if [[ $XRAY_Vmess_TLS == "running" ]]; then
    status_11="ğŸŸ¢ ON"
else
    status_11="ğŸ”´ OFF"
fi

if [[ $XRAY_Vmess_gRPC == "running" ]]; then
    status_12="ğŸŸ¢ ON"
else
    status_12="ğŸ”´ OFF"
fi

if [[ $XRAY_Vmess_None_TLS == "running" ]]; then
    status_13="ğŸŸ¢ ON"
else
    status_13="ğŸ”´ OFF"
fi

if [[ $XRAY_Vless_TLS == "running" ]]; then
    status_14="ğŸŸ¢ ON"
else
    status_14="ğŸ”´ OFF"
fi

if [[ $XRAY_Vless_gRPC == "running" ]]; then
    status_15="ğŸŸ¢ ON"
else
    status_15="ğŸ”´ OFF"
fi

if [[ $XRAY_Vless_None_TLS == "running" ]]; then
    status_16="ğŸŸ¢ ON"
else
    status_16="ğŸ”´ OFF"
fi

if [[ $Trojan_gRPC == "running" ]]; then
