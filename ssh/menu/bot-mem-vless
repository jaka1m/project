#!/bin/bash
CLIENTS=$(grep -c -E "^### " "/etc/vless/.vless.db")
if [[ ${CLIENTS} == '0' ]]; then
    echo ""
    echo "   You have no existing clients!"
    echo ""
    exit 0
fi
listmem=$(grep -s "^### " "/etc/vless/.vless.db" | cut -d ' ' -f 2-3 | column -t | sort | uniq)
#echo "Member Xray/Vless "
echo "**═══════════════**"
echo "**USERNAME EXPIRED**"
echo "**═══════════════**"
echo "$listmem"
echo "**═══════════════**"
echo "**Account number : $CLIENTS user**"
echo "**═══════════════**"
exit